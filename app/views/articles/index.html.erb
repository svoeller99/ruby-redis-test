<div class="articles">
<% @articles.each do |article| %>
    <h2><%= article.title %></h2>
    <p><%= article.text %></p>
    <%= link_to 'Edit', edit_article_path(article) %>
    <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'} %>
    <hr />
<% end %>
</div>
<%= link_to 'New Article', new_article_path %>